
<div class="container justify-content-center align-items-center d-flex" style="border-radius: 5%; border-color: pink; border-style: solid; padding-top: 50px; width: 30%; margin-top: 50px; background-color: white">
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 style="text-align: center; margin-bottom: 50px">Đăng Nhập</h2>
    <%= f.email_field :email %>
    <%= f.password_field :password %>
    <%= f.check_box :remember_me %>
    <%= f.submit "Log In" %>
    <div class="form-group d-flex-2">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
